<h1>Cat Request Information</h1>

<% sorted = @cat_rental_requests.sort_by {|crr| crr.start_date } %>
<% sorted.each do |crr| %>
<table>
  <colgroup span="4"></colgroup>
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th>Start date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>

  <% cat_name = Cat.find_by(id: crr.cat_id).name %>
  <tr>
    <td><%= cat_name %></td>
    <td><%= crr.cat_id %></td>
    <td><%= crr.start_date %></td>
    <td><%= crr.end_date %></td>
    <td><%= crr.status %></td>
  </tr>

</table>

<% end %>
