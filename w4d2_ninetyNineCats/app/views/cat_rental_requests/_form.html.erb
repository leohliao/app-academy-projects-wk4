<% _action = cat_rental_request.id ? cat_rental_request_url(cat_rental_request) : cat_rental_requests_url %>
<% _verb = cat_rental_request.id ? "PATCH" : "POST" %>
<form action="<%=_action%>" method="post" >
  <input type="hidden" name="_method" value ="<%=_verb%>">


  <label for="cat_id">Name of Cat</label>
    <select id="cat_id" name="cat_rental_request[cat_id]">
      <option disabled = true, selected = true > -- Select Cat -- </option>
        <%Cat.all.each do |cat|%>
      <option value="<%="#{cat.id}"%>"> <%= cat.name %>
    </option>
    <% end %>
    <br>
    </select>


    <br>

  <label for="start_date">Start Date</label>
    <input id="start_date" type="date" name="cat_rental_request[start_date]"
    value="<%= cat_rental_request.start_date %>">

    <br>

  <label for="end_date">End Date</label>
    <input id="end_date" type="date" name="cat_rental_request[end_date]"
    value="<%= cat_rental_request.end_date %>">
    <br>

  <h3>Status: <%="#{cat_rental_request.status}"%></h3>

<input type="submit" value="submit">
